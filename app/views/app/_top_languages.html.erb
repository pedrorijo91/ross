<p><strong>Top Languages</strong></p>
<table class="table table-striped table-sm">
  <thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Languages</th>
    <th scope="col"></th>
  </tr>
  </thead>
  <tbody>
  <% stats.languages.sort_by {|_key, value| value}.reverse[0..9].each_with_index do |lang, idx| %>
    <%= render partial: 'lang_table_line', :locals => {:idx => idx + 1, :lang => lang[0]} %>
  <% end %>

  <% (10 - stats.languages.size).times do |index| %>
    <%= render partial: 'lang_table_line', :locals => {:idx => stats.languages.size + index + 1, :lang => '-'} %>
  <% end %>
  </tbody>
</table>