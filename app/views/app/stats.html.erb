<div class="container">

  <div class="row justify-content-center">
    <h1>The Open Source Game</h1>
  </div>

  <div class="row" id="top">
    <div class="col-md-4">
      <div class="row">
        <img class="img-thumbnail" src="<%= stats.avatar_url %>" width="200px">
      </div>
      <div class="row">
        <a href="<%= stats.profile_url %>"><%= stats.username %></a> <!-- TODO center text  -->
      </div>
    </div>
    <div class="col-md-4">
      <strong><%= stats.score %></strong> points
    </div>
    <div class="col-md-4">
      <div class="row">
        <img src="https://i.pinimg.com/originals/41/36/16/41361625cc44df07f81a620eac766468.png" width="150px">
      </div>
      <div class="row">
        share <!-- TODO center text https://getbootstrap.com/docs/4.1/utilities/text/ -->
      </div>
    </div>
  </div>

  <br><br>

  <div class="row">
    <div class="col-md-9">
      <%= render partial: 'top_repos', :locals => {:stats => stats} %>
    </div>
    <div class="col-md-3">
      <%= render partial: 'top_languages', :locals => {:stats => stats} %>
    </div>
  </div>

  <br><br>

  <%= render 'footer' %>

</div>


