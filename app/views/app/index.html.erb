<h1>Hello, Rails!</h1>

<% if alert %>
  <div class="alert alert-danger" role="alert">
    <%= alert %>
  </div>
<% end %>

<% if notice %>
  <div class="alert alert-warning" role="alert">
    <%= notice %>
  </div>
<% end %>

<%= form_with url: compute_path, local: true do |form| %>
  <p>
    <%= form.label :username %><br>
    <%= form.text_field :username, required: true %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>


